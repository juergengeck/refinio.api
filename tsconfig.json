{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "paths": {
      "@refinio/one.core/*": ["../one.core/*"],
      "@refinio/one.models/*": ["../one.models/*"],
      "@refinio/one.trust/*": ["../one.trust/*"],
      "@refinio/one.discovery/*": ["../one.discovery/*"],
      "@refinio/one.knowledge/*": ["../one.knowledge/*"],
      "@refinio/one.verifiable/*": ["../one.verifiable/*"]
    }
  },
  "include": ["src/**/*", "@OneObjectInterfaces.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}