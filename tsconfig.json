{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "@OneObjectInterfaces.d.ts",
    "src/PlanRegistry.ts",
    "src/TransportPlan.ts",
    "src/CoordinationPlan.ts",
    "src/errors.ts",
    "src/plan-system-index.ts",
    "src/types/**/*.ts",
    "src/transports/IPCTransportPlan.ts",
    "src/StoryFactory.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}